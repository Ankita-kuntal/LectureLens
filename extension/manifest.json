{
  "manifest_version": 3,
  "name": "LectureLens",
  "version": "2.1.0",
  "description": "AI-powered YouTube lecture assistant with full transcript context and visual awareness.",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage" 
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:5001/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}